<!-- app/views/users/loan_form.html.erb -->
<h1>New Loan Request</h1>

<%= form_with(model: @loan, url: create_loan_request_user_path(current_user), method: :get) do |form| %>
  <div>
    <%= form.label :amount %>
    <%= form.number_field :amount %>
  </div>

  <div>
    <%= form.submit "Submit Loan Request" %>
  </div>
<% end %>

<%= link_to "Back to Dashboard", user_path %>

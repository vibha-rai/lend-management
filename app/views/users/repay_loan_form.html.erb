<h2>Repay Loan</h2>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<% if flash[:alert] %>
  <p class="alert"><%= flash[:alert] %></p>
<% end %>

<p>Select a Loan to Repay:</p>

<%= form_tag repay_loan_user_path, method: :get do %>
  <div class="loan-list">
    <% current_user.loans.open.each do |loan| %>
      <label>
        <%= radio_button_tag 'loan_id', loan.id %>
        <strong>Loan Amount:</strong> <%= loan.amount %> |
        <strong>Interest Rate:</strong> <%= loan.interest_rate %> |
      </label><br>
    <% end %>
  </div>

  <div class="actions">
    <%= submit_tag "Repay Selected Loan" %>
  </div>
<% end %>

<%= link_to "Back to Dashboard", user_path, class: "button-style" %>
